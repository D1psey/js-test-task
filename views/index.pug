nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
    .navbar-brand.mr-auto.task-list
        img.gimg(src='/images/calendar.png') 
        span.my-sm-2 Task list  
    //- button.btn
    button.btn.my-2.my-sm-0
      img.gimg.edit(src='/images/pencil.png')
    button.btn.my-2.my-sm-0
      img.gimg.delete(src='/images/trash.png')
    .login-nav-data    
        button.btn.btn-primary.bg-success.my-2.my-sm-0.btn-login(data-toggle='modal' data-target='#loginModal') Login
  
#loginModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog.modal-dialog-centered(role='document')
    .modal-content
      .modal-header.border-bottom-0 
        h4 Login
        button.close(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        .d-flex.flex-column.text-center
          .form-group
            input.form-control(type='email' placeholder='Your email address...')
          .form-group
            input.form-control(type='password' placeholder='Your password...')
          .btn-group  
            button.btn.btn-success.btn-modal-login Login
            button.btn.btn-success.btn-modal-register Register

#exampleModal.modal.fade(tabindex='-1' aria-hidden='true')
  .modal-dialog.modal-dialog-centered(role='document')
    .modal-content
      .modal-header.border-bottom-0
        h5#exampleModalLabel.modal-title Input new value
        button.close(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        form
          .form-group
            input.message-text.form-control(type='text')
      .modal-footer
        button.btn.btn-secondary(type='button' data-dismiss='modal') Close
        button.btn.btn-primary.btn-edit-confirm(type='button' data-dismiss='modal') Confirm

table.table.table-bordered.table-hover
  thead.bg-lights
    tr
      th(scope='col') 
        img.gimg(src='/images/plus.png')
      th(scope='col') 
        form.form
          input.form-control.addTaskText(type='text' placeholder="Start typing here to create a task...")
      th(scope='col')
        .input-group-append
          button#basic-addon2.input-group-text.bg-dark.text-light.add Add Task  
          .spinner-border(role='status')
            span.sr-only Loading... 
  tbody.greengerty

